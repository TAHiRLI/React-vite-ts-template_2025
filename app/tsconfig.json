{
	"compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,

		"baseUrl": ".",
		"paths": {
			"@pages/*": ["src/pages/*"],
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@context/*": ["src/context/*"],
			"@lib/*": ["src/lib/*"],
			"@store/*": ["src/store/*"],
			"@services/*": ["src/services/*"],
			"@/*": ["src/*"]
		}
	},
	"include": ["src"]
}
